{
  "name": "electron-nuxt-app",
  "version": "1.0.0",
  "main": "electron/main.js",
  "license": "SEE LICENSE IN build/license.txt",
  "description": "electron nuxt app",
  "author": {
    "name": "ABTech",
    "email": "agbebibidemi02@email.com"
  },
  "homepage": "https://github.com/github username/project repo",
  "repository": {
    "type": "git",
    "url": "https://github.com/Github Username/repo name.git"
  },
  "scripts": {
    "dev": "concurrently \"yarn nuxt dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "nuxt generate",
    "package": "yarn build && electron-packager . project-name --platform=win32 --arch=x64 --out=release --overwrite --asar --no-prune --icon=build/icon.ico",
    "package:mac": "yarn build && electron-packager . project-name --platform=darwin --arch=x64 --out=release --overwrite --asar --no-prune --icon=build/icon.icns",
    "package:linux": "yarn build && electron-packager . project-name --platform=linux --arch=x64 --out=release --overwrite --asar --no-prune --icon=build/icon.png",
    "start": "electron .",
    "archive:win": "cd release && powershell Compress-Archive -Path 'project-name-win32-x64' -DestinationPath 'project-name-win32-x64-v%npm_package_version%.zip'",
    "archive:mac": "cd release && zip -r project-name-darwin-x64-v$npm_package_version.zip project-name-darwin-x64",
    "archive:linux": "cd release && tar -czf project-name-linux-x64-v$npm_package_version.tar.gz project-name-linux-x64"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.11.1",
    "@supabase/supabase-js": "^2.50.2",
    "apexcharts": "^4.7.0",
    "chart.js": "^4.5.0",
    "electron-log": "^5.1.4",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "font-awesome": "^4.7.0",
    "nuxt": "^3.10.0",
    "pinia": "^3.0.3",
    "vue-chartjs": "^5.3.2",
    "vue3-apexcharts": "^1.8.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "concurrently": "^8.2.0",
    "electron-packager": "^17.1.2",
    "wait-on": "^7.0.1"
  }
}